<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <section class="section secondary-color-bg">
        <div class="scaled-image" id="myPlot" style="width:100%;max-width:700px"></div>
    </section>

        <section class="section container gutter">
            <div class="container-grid container-grid-halves">
