<!DOCTYPE html>
<html>

<head>
    <title>Flower power!</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png" />
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body class="content">

    <%- include(`partials/header`); %>

    <main class="main">
        <section class="section secondary-color-bg">
            <div class="container">
                <h1 class="decorated-title font-secondary main-color">
                    <span class="main-color-emphasized">User</span> profile
                </h1>
                <div class="dataset">

                    <div class="dataset-entry">
                        <div class="dataset-property">
                            Username
                        </div>
                        <div class="dataset-value">
                            <%= user.user_name %>
                        </div>
                    </div>
                    <div class="dataset-entry">
                        <div class="dataset-property">
                            Name
                        </div>
                        <div class="dataset-value">
                            <%= user.name %>
                        </div>
                    </div>
                    <div class="dataset-entry">
                        <div class="dataset-property">
                            Surname
                        </div>
                        <div class="dataset-value">
                            <%= user.surname %>
                        </div>
                    </div>
                    <div class="dataset-entry">
                        <div class="dataset-property">
                            E-mail
                        </div>
                        <div class="dataset-value">
                            <%= user.email %>
                        </div>
                    </div>
                    <div class="dataset-entry">
                        <div class="dataset-property">
                            Current number of points
                        </div>
                        <div class="dataset-value">
                            <%= user.currentpoints %>
                        </div>
                    </div>

                    <div class="dataset-entry">
                        <div class="dataset-property">
                            Total number of points
                        </div>
                        <div class="dataset-value">
                            <%= user.totalpoints %>
                        </div>
                    </div>
                </div>

            </div>

    <%- include(`partials/footer`); %>


</body>

</html>
